{
  "compilerOptions": {
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "target":"es2016",
    "jsx":"react",
    "allowJs": true,
    "outDir": "dist",
    "inlineSourceMap": true,
    "lib": [
      "es2016",
      "dom",
      "WebWorker"
    ],
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
